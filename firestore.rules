rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIÓN DE UTILIDAD ---
    // Devuelve true si el usuario que hace la petición es un administrador.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- REGLAS PÚBLICAS ---
    // Cualquiera puede leer ofertas, categorías y marcas.
    match /deals/{dealId} {
      allow read: if true;
      // Solo los administradores pueden crear, actualizar o borrar ofertas.
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
       // Solo los administradores pueden escribir.
      allow write: if isAdmin();
    }

    match /brands/{brandId} {
      allow read: if true;
      // Solo los administradores pueden escribir.
      allow write: if isAdmin();
    }

    // --- REGLAS DE USUARIOS ---
    match /users/{userId} {
      // Un usuario puede leer y escribir su propio documento.
      allow read, write: if request.auth.uid == userId;
      // Un administrador puede leer los datos de cualquier usuario (pero no escribirlos).
      allow read: if isAdmin();
    }
  }
}
